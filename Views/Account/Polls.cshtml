@model ICollection<Poll>

<table class="table">
    <tr>
        <th>Question</th>
        <th class="text-center">Total Votes</th>
        <th></th>
        <th></th>
    </tr>
    
    @foreach(var poll in @Model)
    {
        <tr>
            <td><a asp-controller="Polls" asp-action="View" asp-route-id="@poll.Id">@poll.Question</a></td>
            <td class="text-center">@poll.TotalVotes</td>
            <td class="text-center"><a asp-controller="Polls" asp-action="Edit" asp-route-id="@poll.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
            <td><a asp-controller="Polls" asp-action="Delete" asp-route-id="@poll.Id"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
        </tr>
    }
</table>